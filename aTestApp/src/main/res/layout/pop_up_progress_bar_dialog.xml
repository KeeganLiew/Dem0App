<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eighty_percent_black">

    <RelativeLayout
        android:layout_width="@dimen/pop_up_dialog_width"
        android:layout_height="@dimen/pop_up_dialog_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:paddingLeft="@dimen/pop_up_dialog_padding_left_right"
        android:paddingRight="@dimen/pop_up_dialog_padding_left_right">

        <ProgressBar
            android:id="@+id/Pop_Up_Progress_Bar_Dialog_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_style" />

        <TextView
            android:id="@+id/Pop_Up_Progress_Bar_Dialog_TextView_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/Pop_Up_Progress_Bar_Dialog_ProgressBar"
            android:layout_toRightOf="@id/Pop_Up_Progress_Bar_Dialog_ProgressBar"
            android:indeterminateDrawable="@drawable/progress_style"
            android:paddingLeft="@dimen/edit_text_padding_left_right"
            android:paddingRight="@dimen/edit_text_padding_left_right"
            android:text="@string/loading" />

    </RelativeLayout>
</RelativeLayout>