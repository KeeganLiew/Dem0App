<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Editor_TextInputLayout_MainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9">

        <EditText
            android:id="@+id/Editor_EditText_MainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:imeOptions="actionDone"
            android:inputType="numberPassword" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Editor_ImageView_Revert"
            android:layout_width="@dimen/edit_text_editor_icon_size"
            android:layout_height="@dimen/edit_text_editor_icon_size"
            android:background="@drawable/ic_close_circle_outline_white_48dp"
            android:contentDescription="@string/save_change"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Editor_ImageView_Save"
            android:layout_width="@dimen/edit_text_editor_icon_size"
            android:layout_height="@dimen/edit_text_editor_icon_size"
            android:background="@drawable/ic_check_circle_outline_white_48dp"
            android:contentDescription="@string/save_change"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Editor_ImageView_Edit"
        android:layout_width="@dimen/edit_text_editor_icon_size"
        android:layout_height="@dimen/edit_text_editor_icon_size"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_border_color_white_48dp"
        android:contentDescription="@string/edit_text"
        android:visibility="visible" />

</LinearLayout>