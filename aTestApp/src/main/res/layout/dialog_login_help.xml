<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eighty_percent_black">

    <LinearLayout
        android:layout_width="@dimen/dialog_auth_option_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginRight="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_Help"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/Dialog_Login_Help_ImageView_Close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/close_dialog"
                android:src="@drawable/ic_close_white_48dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/pure_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginRight="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginStart="@dimen/pop_up_dialog_padding_left_right">

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_default_credentials"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_PinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dialog_Login_Help_TextView_Default"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/label_pin" />

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dialog_Login_Help_TextView_Default"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/Dialog_Login_Help_TextView_PinLabel"
                android:layout_toRightOf="@+id/Dialog_Login_Help_TextView_PinLabel"
                android:text="@string/debug_text"
                android:textColor="@color/credential_text_colour"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_PasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dialog_Login_Help_TextView_PinLabel"
                android:layout_marginBottom="5dp"
                android:text="@string/label_password" />

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dialog_Login_Help_TextView_PinLabel"
                android:layout_toEndOf="@+id/Dialog_Login_Help_TextView_PasswordLabel"
                android:layout_toRightOf="@+id/Dialog_Login_Help_TextView_PasswordLabel"
                android:text="@string/debug_text"
                android:textColor="@color/credential_text_colour"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/Dialog_Login_Help_TextView_GestureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Dialog_Login_Help_TextView_PasswordLabel"
                android:layout_marginRight="5dp"
                android:text="@string/label_gesture" />

            <ImageView
                android:id="@+id/Dialog_Login_Help_TextView_Gesture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/Dialog_Login_Help_TextView_PasswordLabel"
                android:layout_toEndOf="@+id/Dialog_Login_Help_TextView_GestureLabel"
                android:layout_toRightOf="@+id/Dialog_Login_Help_TextView_GestureLabel"
                android:alpha="0.5"
                android:contentDescription="@string/label_gesture"
                android:paddingTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gesture_tick" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Dialog_Login_Help_RelativeLayout_Tutorial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_size"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
                android:layout_marginStart="@dimen/pop_up_dialog_padding_left_right"
                android:text="@string/debug_text"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>