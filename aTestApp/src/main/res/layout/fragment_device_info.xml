<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_fragment_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/element_left_right_margins"
        android:layout_marginRight="@dimen/element_left_right_margins"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Fragment_DeviceInfo_TextView_PhoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:background="@color/pure_white"
            android:gravity="center"
            android:maxLines="10"
            android:textColor="@color/app_text_color_for_white_background"
            android:textSize="@dimen/fragment_title_text_size" />

        <TextView
            android:id="@+id/Fragment_DeviceInfo_TextView_PhoneInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_between_elements"
            android:gravity="center"
            android:textColor="@color/app_main_text_color"
            android:textSize="@dimen/fragment_standard_text_size" />

    </LinearLayout>
</LinearLayout>