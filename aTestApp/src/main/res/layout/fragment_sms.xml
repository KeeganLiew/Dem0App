<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/APP_FRAGMENT_BACKGROUND_COLOR"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/REFERENCE_LAYOUT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Fragment_Banks_Type_TextView_AccountId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/SELECT_BANK_ACCOUNT_TYPE"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/Fragment_Banks_Type_ImageView_ListArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/down" />

                <TextView
                    android:id="@+id/Fragment_Bank_Type_TextView_Sep"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/Fragment_Banks_Type_TextView_AccountId"
                    android:background="@color/TAB_SEP_TOP"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/Fragment_Bank_Type_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/Fragment_Bank_Type_TextView_Sep"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:popupBackground="@color/nav_menu_listview_background_color"
                    android:visibility="visible" />
            </RelativeLayout>

            <EditText
                android:id="@+id/Fragment_Payment_BumpToPay_EditText_Name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:hint="@string/NAME"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/PADDING_MARGIN_WIDTH_HEIGHT_10"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Fragment_Banks_EditText_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:digits="0123456789."
                    android:hint="@string/AMOUNT"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Fragment_Banks_EditText_BankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/BANK_ACCOUNT"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Fragment_Banks_RelativeLayout_Extra_Field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/Fragment_Banks_TextView_Extra_Field"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/IBAN_FIELD"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Fragment_Payment_BumpToPay_EditText_Reference"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/REFERENCE"
                    android:inputType="text"
                    android:paddingLeft="20dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectBankTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/SELECT_BANK"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/Fragment_Banks_TextView_Sep"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/selectBankTextView"
                    android:background="@color/TAB_SEP_TOP"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/Fragment_Banks_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Fragment_Banks_TextView_Sep"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:popupBackground="@color/nav_menu_listview_background_color"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:background="@drawable/background_send_money_linear"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Fragment_Select_Account_TextView_AccountId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/SELECT_ACCOUNT"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Fragment_Select_Account_TextView_Sep"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/Fragment_Select_Account_TextView_AccountId"
                    android:background="@color/TAB_SEP_TOP"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/Fragment_Select_Account_Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Fragment_Select_Account_TextView_Sep"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:popupBackground="@color/nav_menu_listview_background_color" />
            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Fragment_Banks_Button_Pay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/c_button_height"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/margin_between_elements"
                    android:layout_weight="1"
                    android:background="@drawable/error_button_background"
                    android:text="@string/button_submit"
                    android:textColor="@color/registration_register_button_text_color" />

                <Button
                    android:id="@+id/Fragment_Banks_Button_Cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/c_button_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="@dimen/margin_between_elements"
                    android:layout_weight="1"
                    android:background="@drawable/error_button_background"
                    android:text="@string/button_cancel"
                    android:textColor="@color/registration_register_button_text_color" />

            </LinearLayout>

            <Switch
                android:id="@+id/smsToggleSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="@string/SMSSwitch" />

            <ProgressBar
                android:id="@+id/Fragment_Banks_Progressbar"
                android:layout_width="@dimen/progressbar_width"
                android:layout_height="@dimen/progressbar_height"
                android:layout_gravity="center"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/Fragment_Banks_TextView_Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/margin_before_result"
                android:gravity="center"
                android:maxLines="10"
                android:textSize="@dimen/server_response_text_size"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>