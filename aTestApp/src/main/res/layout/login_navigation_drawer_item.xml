<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_navigation_icon"
        android:layout_width="@dimen/login_navigation_icon_size"
        android:layout_height="@dimen/login_navigation_icon_size"
        android:background="@drawable/name" />

    <TextView
        android:id="@+id/login_navigation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/pure_white"
        android:textSize="@dimen/login_navigation_text_size" />
    <!--android:drawableTop="@drawable/name"-->

</LinearLayout>