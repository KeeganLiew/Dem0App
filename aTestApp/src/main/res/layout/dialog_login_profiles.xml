<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eighty_percent_black">

    <LinearLayout
        android:layout_width="@dimen/dialog_auth_option_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/grey"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginRight="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/Dialog_Login_Profiles_TextView_Profiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profiles"
                android:textSize="@dimen/standard_text_size" />

            <ImageView
                android:id="@+id/Dialog_Login_Profiles_ImageView_Add"
                android:layout_width="@dimen/dialog_title_icon_size"
                android:layout_height="@dimen/dialog_title_icon_size"
                android:layout_marginLeft="@dimen/margin_between_elements"
                android:layout_marginStart="@dimen/margin_between_elements"
                android:layout_toEndOf="@+id/Dialog_Login_Profiles_TextView_Profiles"
                android:layout_toRightOf="@+id/Dialog_Login_Profiles_TextView_Profiles"
                android:layout_centerVertical="true"
                android:contentDescription="@string/add_profile"
                android:src="@drawable/ic_plus_box_white_48dp" />

            <ImageView
                android:id="@+id/Dialog_Login_Profiles_ImageView_Close"
                android:layout_width="@dimen/dialog_title_icon_size"
                android:layout_height="@dimen/dialog_title_icon_size"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/close_dialog"
                android:src="@drawable/ic_close_white_48dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/Dialog_Login_Profiles_ListView_UserList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_login_profiles_listview_height" />

        <Switch
            android:id="@+id/Dialog_Login_Profiles_Switch_OfflineProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/top_bottom_margin_for_last_elements"
            android:layout_marginEnd="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginRight="@dimen/pop_up_dialog_padding_left_right"
            android:layout_marginStart="@dimen/pop_up_dialog_padding_left_right"
            android:text="@string/profile_sync"
            android:textSize="@dimen/smaller_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_semi_transparent" />

        <RelativeLayout
            android:id="@+id/Dialog_Login_Profiles_RelativeLayout_ClearProfiles"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_size"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/pop_up_dialog_padding_left_right"
                android:layout_marginStart="@dimen/pop_up_dialog_padding_left_right"
                android:text="@string/clear_profiles" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>