<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/progress_bar_body_colour"
            android:centerY="0.50"
            android:endColor="@color/progress_bar_tail_colour"
            android:startColor="@color/progress_bar_head_colour"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>



